<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
    <lifecycle>
		<phase-listener>net.entrofi.hrm.web.application.jsf.phaselisteners.LoginErrorPhaseListener</phase-listener>
	</lifecycle>
    <application>
    	<resource-bundle>
			<base-name>net.entrofi.hrm.messages.messages</base-name>
			<var>messages</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>net.entrofi.hrm.messages.labels</base-name>
			<var>labels</var>
		</resource-bundle>
		<resource-bundle>
			<base-name>net.entrofi.hrm.messages.info</base-name>
			<var>info</var>
		</resource-bundle>
		<el-resolver>
    		    org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
  	</application>
    
	<managed-bean>
		<managed-bean-name>helloManagedBean</managed-bean-name>
		<managed-bean-class>net.entrofi.hrm.web.HelloManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>contactService</property-name>
			<property-class>net.entrofi.hrm.domain.service.ContactService</property-class>
			<value>#{contactService}</value>
		</managed-property>
	</managed-bean>

</faces-config>